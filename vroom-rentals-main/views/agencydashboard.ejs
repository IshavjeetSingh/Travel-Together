<%- include('partials/header') %>

  <h3 style="margin-top: 150px;">YOUR LISTED CARS.</h3>
  <%if(cars.length == 0){%>
    <p>Sorry! You have not listed any cars yet.</p>
  <%}%>
  <div class="container" style="margin-top: 100px;">
    <div class="row">
      <%cars.forEach(function(car){%>
      <div class="col-md-3">
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">Model: <%=car.model%></h5>
            <p class="card-text">Number: <%=car.number%></p>
            <p class="card-text">Rent: INR <%=car.rent%> /day</p>
            <p class="card-text">Status: <%=car.status%></p>
            <p class="card-text">Capacity: <%=car.capacity%></p>
            <form  action="/agencydashboard" method="post">
              <input type="hidden" name="carid" value="<%=car._id%>">
              <button type="submit" class="btn btn-light">Update</button>
            </form>

          </div>
        </div>
      </div>
      <%});%>
    </div>
  </div>
<a role="button" class="btn btn-primary" href="/bookedcars">View Booked Cars</a>
<br />
<br />
<a role="button" class="btn btn-primary" href="/addnewcars">Add Cars</a>
<br />
